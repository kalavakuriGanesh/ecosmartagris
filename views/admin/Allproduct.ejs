<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>All Products - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/adminDashboard.css">
  <style>
    body {
      background: url('/images/bg.jpg') no-repeat center center fixed;
      background-size: cover;
      backdrop-filter: blur(5px);
    }
    .container {
      max-width: 95%;
    }
    .table-container {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      overflow-x: auto;
    }
    .table {
      color: white;
      border-collapse: separate;
      border-spacing: 0;
    }
    .table th {
      background: rgba(0, 0, 0, 0.3);
      color: white;
      text-align: center;
    }
    .table td {
      text-align: center;
      vertical-align: middle;
      background: rgba(255, 255, 255, 0.1);
    }
    .table img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 5px;
    }
    .btn {
      border-radius: 20px;
      padding: 5px 10px;
    }
    .btn-edit {
      background: rgba(0, 255, 0, 0.6);
      border: none;
      color: white;
    }
    .btn-delete {
      background: rgba(255, 0, 0, 0.6);
      border: none;
      color: white;
    }
    .btn:hover {
      filter: brightness(1.2);
    }
  </style>
</head>
<body>

  <div class="container mt-4">
    <h2 class="text-center text-white">All Products</h2>
    
    <div class="table-container mt-4">
      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Ordered</th>
            <th>Location</th>
            <th>Description</th>
            <th>Seller</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><img src="<%= product.photo %>" alt="<%= product.name %>"></td>
              <td><%= product.name %></td>
              <td>â‚¹<%= product.price %></td>
              <td><%= product.quantity %></td>
              <td><%= product.ordered %></td>
              <td><%= product.location %></td>
              <td><%= product.description %></td>
              <td><%= product.seller %></td>
              <td>
                <button class="btn btn-edit" onclick="editProduct('<%= product._id %>')">Edit</button>
                <button class="btn btn-delete" onclick="confirmDelete('<%= product._id %>')">Delete</button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function confirmDelete(productId) {
      if (confirm("Are you sure you want to delete this product?")) {
        window.location.href = `/admin/deleteProduct/${productId}`;
      }
    }

    function editProduct(productId) {
      window.location.href = `/admin/editProduct/${productId}`;
    }
  </script>

</body>
</html>
